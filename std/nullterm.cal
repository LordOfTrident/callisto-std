## ## printntstr
## Parameters: addr str
##
## Prints a null-terminated string to stdout from the given pointer
func printntstr begin
	let addr str
	str !

	while str @ b@ do
		str @ b@ printch
		str @ 1 + str !
	end
end

## ## ntstr_length
## Parameters: addr str
##
## Returns the length of a null-terminated string
func ntstr_length begin
	let addr str
	str !
	let cell ret
	0 ret !

	while str @ b@ do
		ret @ 1 + ret !
		str @ 1 + str !
	end

	ret @
end
